---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout 
	title="Portfolio de Pablo - Desarrollador y Programador Web"
	description="Portfolio de Pablo, desarrollador web especializado en Angular y Astro. Creador de interfaces dinámicas y eficientes para una experiencia de usuario excepcional."
	>
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44 flex flex-col gap-y-4">
      <img
        class="rounded-full size-12"
        src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8cHJvZmlsZXxlbnwwfHwwfHx8MA%3D%3D"
        alt="pablo photo"
      />
      <h1
        class="text-white text-5xl font-bold flex justify-start items-center flex-row gap-x-4 pb-4"
      >
        Hey, soy Pablo
        <a
          href="https://www.linkedin.com/in/pablo-rodriguez-albarran-41a65a2a6/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Disponible parar trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl text-wrap">
        +5 meses de experiencia. <span class="text-yellow-200/90"
          >Desarrollador web.</span
        >
        <span class="text-red-200/90">De Alicante, España.</span>
        <span class="opacity-75">
          Especializado en desarrollo frontend con Angular y Astro, creo
          interfaces dinámicas y eficientes para una experiencia de usuario
          excepcional.
        </span>
      </h2>

      <nav class="flex gap-x-4 mt-6">
        <SocialPill href="https://www.linkedin.com/in/pablo-rodriguez-albarran-41a65a2a6/">
          <LinkedInIcon class="size-5" />
          LinkedIn
        </SocialPill>
				<SocialPill href="https://github.com/pablorod1">
          <GitHubIcon class="size-5" />
          GitHub
        </SocialPill>
				<SocialPill href="https://github.com/pablorod1">
          <MailIcon class="size-5" />
          pablorodriguezalbarran2000@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>

